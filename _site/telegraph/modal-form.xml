<telegraph binding="late">
	<directive action="field" name="time-and-date" value="[timestamp:date] - [timestamp:time]" />
	<directive action="require" field="name"/>
	<directive action="require" field="email" format="email" error="Please enter a valid email address." />
	<directive action="require" field="question"/>
	<directive action="email" to="data@bu.edu" from="[email]" subject="Data Services Website Question" />
	<directive action="captcha"/>
	<directive action="imperius" url="https://www.bu.edu/data/index.html" /> 
</telegraph>
